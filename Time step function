import numpy as np
import matplotlib.pyplot as plt
import pandas as pd

maxtime = 2
interval = 100
input = np.arange(1000)
timeshort = np.geomspace(1, len(input), num = int(interval * maxtime), dtype=int) -1
timeshort = np.unique(timeshort)
t = input[timeshort]

# plt.plot(t)
# plt.show()

data = {
    #'Time': t,
    'Input': input
}

df = pd.DataFrame(data)

# Save to Excel
output_filename = "timearray.xlsx"
df.to_excel(output_filename, index=False)

print(f"\n Results exported to Excel: {output_filename}")